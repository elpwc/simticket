generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ticket {
  id           Int      @id @default(autoincrement())
  name         String
  companyId    Int
  ticketId     Int
  data         String   @db.VarChar(2048)
  like         Int      @default(0)
  publicStatus Int      @default(0) //0 wait for checking, 1 not passed, 2 public
  ip           String   @default("")
  editorName   String   @default("")
  views        Int      @default(0)
  createdAt    DateTime @default(now())
  deleted      Boolean  @default(false)
  from         String   @default("")
  to           String   @default("")
}
